---

const {labelFor, labelText, inputType, inputId, placeholder} = Astro.props;

---

<div class="form-control">
    <label for={labelFor}>{labelText}</label>
    <input  autofocus type={inputType} name={inputId} id={inputId} placeholder={placeholder} >
    <span class="error"></span>
</div>


<style>
.form-control {
  position: relative;
  margin-block: 0.3rem;
}

  label {
    display: block;
    text-transform: uppercase;
    font-size: 14px;
    margin-bottom: 5px;
    letter-spacing: 2px;
    color: var(--very-dark-blue);
  }

  input {
    border-radius: 7px;
    border: 1px solid var(--very-light-gray);
    padding-block: 0.7rem;
    padding-left: 15px;
    font-size: 18px;
    font-family: 'Space Grotesk', sans-serif;
    outline-color:  hsl(278, 94%, 30%);
    width: 100%;
  }

  input::placeholder {
    font-weight: 500;
    color: var(--very-light-gray);
  }

  .form-control span {
    position: absolute;
    bottom: -20px;
    left: 5px;
    color: red;
    font-size: 12px;
    visibility: hidden;
  }

  .form-control span.error {
    visibility: visible;
  }
  

   input.error {
    border-color: red;
  }

/* Chrome, Safari, Edge, Opera */
input::-webkit-outer-spin-button,
input::-webkit-inner-spin-button {
  -webkit-appearance: none;
  margin: 0;
}

/* Firefox */
input[type=number] {
  -moz-appearance: textfield;
}

</style>
