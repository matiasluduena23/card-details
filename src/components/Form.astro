---

import Button from "./Button.astro";
import FormControl from "./FormControl.astro";
const name = "Confirm";


---

<form action="#">

  <FormControl labelFor="name" labelText="Cardholder Name" inputType="text" inputId="name" placeholder="e.g. Jane Appleseed" />
  
  <FormControl labelFor="number" labelText="Card Number" inputType="number" inputId="number" placeholder="e.g. 1234 5678 9123 0000" />

  <div class="grid">
    <div class="col-1">

      <FormControl labelFor="date" labelText="Exp. Date" inputType="number" inputId="month" placeholder="MM" />
      <FormControl labelFor="date" labelText="(MM/YY)" inputType="number" inputId="year" placeholder="YY" />
      
    </div>
    <div class="col-2">
      <FormControl labelFor="cvc" labelText="CVC" inputType="number" inputId="cvc" placeholder="e.g. 123" />
      
    </div>
  </div>    
    <Button text={name} id="submit" />
</form>

<style>

form {
  padding: 1.5rem;
  display: flex;
  flex-direction: column;
  gap: 1rem;
  width: 400px;
}


  .grid {
    display: flex;
    gap: 1rem;
  }

 
  .col-2{
    width: 40%;
  }

  .col-1 {
    width: 60%;
    display: flex;
    align-items: end;
    justify-content: start;
    gap: 0.5rem;
  }
 

  @media(min-width: 900px){
    form {
      gap: 2rem;
      
    }
  }

</style>




