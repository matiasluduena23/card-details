<section>
  <figure>
    <img src="../images/card-logo.svg" alt="logo">
  </figure>
  <div class="">
    <p class="card-number">0000 0000 0000 0000</p>
    
  </div>
  <p class="name">Jane Appleseed</p>
  <p class="date"><span class="month">00</span>/<span class="year">00</span></p>
</section>

<style>

  section {
    height: 150px;
    width: 274px;
    background-image: url('../images/bg-card-front.png');
    background-repeat: no-repeat;
    background-size: contain;
    padding: 1rem;
    color: var(--very-light-gray);
    position: relative;
    letter-spacing: 2px;
  }

  figure {
    width: 50px;
  }

  .card-number {
    position: absolute;
    bottom: 3rem;
  }

  .name,
  .date {
    position: absolute;
    bottom: 1rem;
    font-size: 10px;
    text-transform: uppercase;
  }
  
  .name {
    left: 1rem;
  }

  .date {
    right: 1rem;
  }

  @media(min-width: 900px) {
    section {
      height: 200px;
      width: 363px;
    }

    
  }
</style>